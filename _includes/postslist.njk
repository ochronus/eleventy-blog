<ul class="index-posts">
{% for post in postslist | reverse %}
  <li>
    <article>
      <header>
          <h2 class="post-title-index">
            <a href="{{ post.url | url }}" title="view post">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
          </h2>
          <div class="post-meta">
            <time  datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
            | by {{ post.metadata.author.name }}
            </div>
      </header>
    </article>
  </li>
{% endfor %}
</ul>
