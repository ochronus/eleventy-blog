<ul class="index-posts">
{% for post in postslist | reverse %}
{% if not post.data.draft and not post.data.delist %}
  <li>
    <article>
      <header>
          <h2 class="post-title-index">
            <a href="{{ post.url | url }}" title="view post">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
          </h2>
          <div class="post-meta">
            <time  datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
            <span class="post-tags">
              {% for tag in post.data.tags | sort %}
                {% if tag != "posts" %}
                  <a href="/tags/{{ tag }}/">{{ tag }}</a>
                {% endif %}
              {% endfor %}
            </span>
          </div>
      </header>
    </article>
  </li>
{% endif %}
{% endfor %}
</ul>
